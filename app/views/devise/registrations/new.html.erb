<div class="am-g myapp-login">
  <div class="myapp-login-logo-block  tpl-login-max">
    <div class="myapp-login-logo-text">
      <div class="myapp-login-logo-text">
        云书阁<span> 注册</span> <i class="am-icon-skyatlas"></i>
      </div>
    </div>

    <div class="login-font">
      <i>登录</i> or <span> <%= link_to "注册", new_registration_path(resource_name)%></span>
    </div>

    <div class="am-u-sm-10 login-am-center">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "am-form"}) do |f| %>
        <fieldset>
          <div class="alert"><%= f.error_notification %></div>

          <div class="am-form-group">
            <%= f.input :login_name, required: true, label: false,id: "doc-ipt-email-1", placeholder: "输入用户名" %>
          </div>

          <div class="am-form-group mt3">
            <%= f.input :email, required: true, autofocus: true, label: false,id: "doc-ipt-email-1", placeholder: "输入电子邮件" %>
          </div>

          <div class="am-form-group mt3">
            <%= f.input :password, id:"doc-ipt-pwd-1", required: true, label: false, placeholder: "输入密码"  %>
          </div>

          <div class="am-form-group mt3">
            <%= f.input :password_confirmation, id:"doc-ipt-pwd-1", required: true, label: false, placeholder: "输入确认密码"  %>
          </div>

          <p>
            <button type="submit" class="am-btn am-btn-default">注册</button>
          </p>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>